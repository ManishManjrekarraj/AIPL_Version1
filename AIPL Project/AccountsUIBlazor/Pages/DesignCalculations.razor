@code {

    public UIPontoonAndSiteData UIPontoonAndSiteData { get; set; } = new();
    public List<UIInputsAndLayout> UIInputandLayoutList = new();

    // for radzen grid
    RadzenDataGrid<UIHydrostatics> hydrostaticsGrid;
    private List<UIHydrostatics> hydrostaticList = new List<UIHydrostatics>();
    RadzenDataGrid<UILoadDatas> loadDatasGrid;
    private List<UILoadDatas> loadDatasList = new List<UILoadDatas>();

    // for buoyancy calculations
    public UIBuoyancyCalculations BuoyancyModel { get; set; } = new();

    // for stability about x
    public UIStabilityAboutX StabilityAboutXModel { get; set; } = new();

    // for stability about y
    public UIStabilityAboutY StabilityAboutYModel { get; set; } = new();

    // for radzen grid - Wind Pressure Calc
    RadzenDataGrid<UIWindPressureCalculation> windCalcGrid;
    private List<UIWindPressureCalculation> windCalcList = new List<UIWindPressureCalculation>();

    // for radzen grid - Wind Load Calc
    RadzenDataGrid<UIWindLoadCalculation> WindLoadCalcGrid;
    private List<UIWindLoadCalculation> WindLoadCalcList = new List<UIWindLoadCalculation>();
    
    // for radzen grid - Drag Force Calc
    RadzenDataGrid<UIDragForceCalculations> DragForceCalcGrid;
    private List<UIDragForceCalculations> DragForceCalcList = new List<UIDragForceCalculations>();

    // for radzen grid - Wave Force Calc
    RadzenDataGrid<UIWaveForceCalculation> WaveForceCalcGrid;
    private List<UIWaveForceCalculation> WaveForceCalcList = new List<UIWaveForceCalculation>();

    // for radzen grid - DeadWeight Anchor And Mooring Force Calc
    RadzenDataGrid<UIDeadWeightAnchorAndMooringCalculation> DeadWeightAnchorAndMooringGrid;
    private List<UIDeadWeightAnchorAndMooringCalculation> DeadWeightAnchorAndMooringList = new List<UIDeadWeightAnchorAndMooringCalculation>();

    protected override async Task OnInitializedAsync()
    {
        await GetAllInputDetails();
        await GetLoadDatasDetails();
    }

    public async Task GetAllInputDetails()
    {
        try
        {
            // get the inputs list
            UIInputandLayoutList = await HttpClient.GetFromJsonAsync<List<UIInputsAndLayout>>("InputsandLayout/GetAllInputs");

            // get first value from list
            var input = UIInputandLayoutList.First();

            // update the list in the ui
            if (UIInputandLayoutList is not null)
            {
                UIPontoonAndSiteData.VesselLength = input.Length;
                UIPontoonAndSiteData.VesselWidth = input.Width;
                // UIPontoonAndSiteData.VesselDepth = input.VesselDepth;
                UIPontoonAndSiteData.WindSpeed = input.WindVelocity;
                UIPontoonAndSiteData.CurrentSpeed = input.CurrentSpeed;
                UIPontoonAndSiteData.WaveHeight = input.WaveHeight;
                // UIPontoonAndSiteData.VesselWeight = input.VesselWeight;
                // UIPontoonAndSiteData.VesselCOGX = input.VesselCOGX;
                // UIPontoonAndSiteData.VesselCOGY = input.VesselCOGY;
                // UIPontoonAndSiteData.VesselCOGZ = input.VesselCOGZ;
                // UIPontoonAndSiteData.MOIX = input.MOIX;
                // UIPontoonAndSiteData.MOIY = input.MOIY;
                // UIPontoonAndSiteData.VesselBuoyancy = input.VesselBuoyancy;
                // UIPontoonAndSiteData.TotalArea = input.TotalArea;
                // UIPontoonAndSiteData.MinimumFreeBoard = input.MinimumFreeBoard;
