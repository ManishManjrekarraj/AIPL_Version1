@page "/DesignCalculations"

@using Accounts.Models.UIModels
@using System.Net.Http;
@using System.Text;
@using System.Text.Json;
@inject HttpClient HttpClient;
@inject NavigationManager navigationManager;

<h3>DesignCalculations</h3>

<div class="rz-p-sm-12">
    <RadzenAccordion>
        <Items>
            @* Pontoon and sitedata*@
            <RadzenAccordionItem Text="Pontoon and Sitedata Table" CollapseTitle="Collapse Pontoon and Sitedata Table."
            ExpandTitle="Expand Pontoon and Sitedata Table." CollapseAriaLabel="Collapse Table."
            ExpandAriaLabel="Expand the Table.">
                <EditForm Model="@UIPontoonAndSiteData">

                    <div class="container">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label>Vessel Length</label>
                                <input class="form-control" type="number" @bind-value="UIPontoonAndSiteData.VesselLength" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Vessel Width</label>
                                <input class="form-control" type="number" @bind-value="UIPontoonAndSiteData.VesselWidth" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Vessel Depth</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.VesselDepth" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Wind Speed</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.WindSpeed" />
                            </div>

                            <div class="col-md-3 mb-3">
                                <label>Current Speed</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.CurrentSpeed" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Wave Height</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.WaveHeight" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Vessel Weight</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.VesselWeight" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Vessel COG X</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.VesselCOGX" />
                            </div>

                            <div class="col-md-3 mb-3">
                                <label>Vessel COG Y</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.VesselCOGY" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Vessel COG Z</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.VesselCOGZ" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>MOI X</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.MOIX" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>MOI Y</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.MOIY" />
                            </div>

                            <div class="col-md-3 mb-3">
                                <label>Vessel Buoyancy</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.VesselBuoyancy" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Total Area</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.TotalArea" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Min Freeboard</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.MinimumFreeBoard" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Max Draft</label>
