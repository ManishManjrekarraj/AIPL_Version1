                            </div>

                            <div class="col-md-3 mb-3">
                                <label>Drag Coefficient X</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.DragCoefficientX" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Drag Coefficient Y</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.DragCoefficientY" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label>Water Depth</label>
                                <input class="form-control" type="number" step="0.01" @bind-value="UIPontoonAndSiteData.WaterDepth" />
                            </div>
