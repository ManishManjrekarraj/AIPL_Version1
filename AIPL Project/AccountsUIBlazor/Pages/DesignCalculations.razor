                                 ExpandAriaLabel="wind pressure table.">
                <div class="row mt-2">
                    <h4>Wind Pressure Calculation</h4>
                    <div class="col-md-12">
                        <RadzenDataGrid @ref="windCalcGrid" AllowAlternatingRows="false" AllowFiltering="true" AllowPaging="true" PageSize="5" AllowSorting="true" EditMode="DataGridEditMode.Single"
